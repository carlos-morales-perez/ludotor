        <!-- Compatibilidad -->
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" >true</item> <!-- Para iconos oscuros en barra clara -->
