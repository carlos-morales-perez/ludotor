    <style name="Theme.Ludotor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item> <!-- Igual a colorPrimary -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status Bar (barra de notificaciones) -->

        <!-- Navigation Bar (barra inferior) -->
