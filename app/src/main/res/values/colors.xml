<!-- res/values/colors.xml -->
<resources>
    <!-- Paleta de Púrpuras (Ejemplo basado en tus nombres) -->
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>

    <!-- Paleta de Teal (Ejemplo para secundario) -->
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>

    <!-- Colores base -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="grey_100">#FFF5F5F5</color>
    <color name="grey_300">#FFE0E0E0</color>
    <color name="grey_500">#FF9E9E9E</color>
    <color name="grey_700">#FF616161</color>
    <color name="red_600">#FFE53935</color>

    <!-- Nombres Semánticos para MODO CLARO -->
    <color name="app_primary">@color/purple_500</color>
    <color name="app_primary_variant">@color/purple_700</color>
    <color name="app_on_primary">@color/white</color>
    <color name="menu_item_text_color">@android:color/black</color>

    <color name="app_secondary">@color/teal_200</color> <!-- Usaremos Teal como secundario en modo claro -->
    <color name="app_secondary_variant">@color/teal_700</color>
    <color name="app_on_secondary">@color/black</color>

    <color name="app_background">@color/white</color>
    <color name="app_on_background">@color/black</color>
    <color name="app_surface">@color/white</color> <!-- O un gris muy claro como grey_100 -->
    <color name="app_on_surface">@color/black</color>

    <color name="app_error">@color/red_600</color>
    <color name="app_on_error">@color/white</color>

    <color name="text_primary">#DE000000</color> <!-- Negro con 87% opacidad -->
    <color name="text_secondary">#8A000000</color> <!-- Negro con 54% opacidad -->

    <color name="control_activated">@color/app_secondary</color>
    <color name="control_normal">@color/grey_500</color>
    <color name="divider_color">#1F000000</color> <!-- Negro con 12% opacidad -->
</resources>