<!-- res/values-night/colors.xml -->
<resources>
    <!-- Paleta de Púrpuras (Ajustados para modo oscuro) -->
    <!-- purple_200 de modo claro puede funcionar bien como primario en oscuro -->
    <color name="dark_purple_primary">@color/purple_200</color> <!-- #FFBB86FC -->
    <color name="dark_purple_variant">#FF8F5ACF</color> <!-- Un tono ligeramente diferente si es necesario -->

    <!-- Paleta de Teal (Ajustados para modo oscuro) -->
    <!-- teal_200 de modo claro puede funcionar como secundario en oscuro -->
    <color name="dark_teal_accent">@color/teal_200</color> <!-- #FF03DAC5 -->

    <!-- Colores base específicos para oscuro (si son diferentes a los globales) -->
    <color name="dark_surface">#FF121212</color> <!-- Un gris muy oscuro estándar para superficies en modo oscuro -->
    <color name="dark_background">#FF121212</color> <!-- Puede ser el mismo que surface o ligeramente diferente -->
    <color name="dark_error">#FFCF6679</color> <!-- Un rojo más claro para contraste en oscuro -->

    <!-- Nombres Semánticos para MODO OSCURO -->
    <color name="app_primary">@color/dark_purple_primary</color> <!-- Púrpura más claro -->
    <color name="app_primary_variant">@color/dark_purple_variant</color>
    <color name="app_on_primary">@color/black</color> <!-- El texto sobre púrpura claro es negro -->

    <color name="app_secondary">@color/dark_teal_accent</color> <!-- Teal claro como acento -->
    <color name="app_secondary_variant">@color/dark_teal_accent</color> <!-- Puede ser el mismo -->
    <color name="app_on_secondary">@color/black</color> <!-- Texto sobre teal claro es negro -->
    <color name="menu_item_text_color">@android:color/white</color>
    <color name="app_background">@color/dark_background</color>
    <color name="app_on_background">@color/white</color>
    <color name="app_surface">@color/dark_surface</color>
    <!-- Para superficies ligeramente elevadas sobre el fondo oscuro, puedes usar un gris un poco más claro -->
    <!-- <color name="app_surface_raised">#FF1E1E1E</color> -->
    <color name="app_on_surface">@color/white</color>

    <color name="app_error">@color/dark_error</color>
    <color name="app_on_error">@color/black</color>

    <color name="text_primary">#FFFFFFFF</color> <!-- Blanco puro -->
    <color name="text_secondary">#B3FFFFFF</color> <!-- Blanco con ~70% opacidad -->

    <color name="control_activated">@color/app_secondary</color>
    <color name="control_normal">@color/grey_300</color> <!-- Un gris más claro para contraste en oscuro -->
    <color name="divider_color">#1FFFFFFF</color> <!-- Blanco con 12% opacidad -->
</resources>